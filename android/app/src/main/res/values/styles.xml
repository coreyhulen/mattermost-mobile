    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="LightTheme" parent="AppTheme">
        <item name="backgroundColor">@color/neutral_lightest</item>
